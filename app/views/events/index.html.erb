<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Venue</th>
      <th>Address</th>
      <th>When</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user_id %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.venue %></td>
        <td><%= event.address %></td>
        <td><%= event.when %></td>
        <td><%= button_to 'Show', event %></td>
        <td><%= button_to 'Edit', edit_event_path(event) %></td>
        <td><%= button_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Event', new_event_path, method: :get, class: "btn btn-primary" %>
