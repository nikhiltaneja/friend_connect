<h1>All Events</h1>

<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>What</th>
      <th>Where</th>
      <th>When</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user.email %></td>
        <td><%= event.title %></td>
        <td><%= event.venue %></td>
        <td><%= event.when %></td>
        <td><%= button_to 'More Details', event_path(event), method: :get %></td>
        <td><%= button_to 'Edit', edit_event_path(event) %></td>
        <td><%= button_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Create Event', new_event_path, method: :get, class: "btn btn-primary" %>
