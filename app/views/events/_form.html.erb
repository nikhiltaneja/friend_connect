<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :venue %><br>
    <%= f.text_field :venue %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <% if false %>
  <div class="field">
    <%= f.radio_button(:day_of_week, 5) %>
    <%= f.label(:day_of_week_friday, "Friday") %>
    <%= f.radio_button(:day_of_week, 6) %>
    <%= f.label(:day_of_week_saturday, "Saturday") %>
    <%= f.radio_button(:day_of_week, 0) %>
    <%= f.label(:day_of_week_sunday, "Sunday") %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.text_field :start_date, class: "event_start_date" %>
  </div>

  <div class="field">
    <%= f.label :start_hour %>
    <%= f.select :start_hour, (0..23) %>
  </div>
  <div class="field">
    <%= f.label :end_hour %>
    <%= f.select :end_hour, (0..23) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
